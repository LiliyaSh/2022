#include <iostream>
#include <math.h>
#include <conio.h>
#include <stdio.h>

double InFunction(double x) {   
    return sin(0.7*x+0.4)/(2.2+cos(0.3*x*x+0.7)); 
}

double CalcIntegral(double a, double b, int n){
    double result, h;
    int i;

    h = (b - a) / n; 
    result = 0;

    for (i = 1; i <= n; i++)
        result += InFunction(a + h * i - h / 2); 

    result *= h;

    return result;
}

int main() {
    double integral;
    integral = CalcIntegral(0.5, 1.3, 10);
    printf("The value of the integral is: %lf \n", integral);
    return 0;
}
